    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_movie">

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.example.moviecatalougeapi.ui.movie.MovieFragment"
        android:label="@string/title_movie"
        tools:layout="@layout/movie_fragment" />

    <fragment
        android:id="@+id/navigation_tv_show"
        android:name="com.example.moviecatalougeapi.ui.tvshow.TvShowFragment"
        android:label="@string/title_tv_show"
        tools:layout="@layout/tv_show_fragment" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.moviecatalougeapi.ui.favorite.FavoriteFragment"
        android:label="@string/favorite"
        tools:layout="@layout/favorite_fragment" />

